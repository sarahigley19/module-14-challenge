<div class="container">
  <div class="row">
    <div class="col">
      <h2>Welcome, {{name}}!</h2>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Create a New Post:</h3>

      <form class="form new-project-form">
        <div class="form-group row">
          <label for="project-name" class="col-sm-3 col-form-label">Post Title:</label>
          <div class="col-sm-9">
            <input class="form-control" type="text" id="project-name" name="project-name" />
          </div>
        </div>

        <div class="form-group row">
          <label for="project-desc" class="col-sm-3 col-form-label">Text:</label>
          <div class="col-sm-9">
            <textarea class="form-control" id="project-desc" name="project-desc"></textarea>
          </div>
        </div>

        <div class="form-group row">
          <label for="project-comment">Comment:</label>
          <div class="col-sm-9">
            <textarea class="form-control" id="project-comment" name="project-comment"></textarea>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-9 offset-sm-3">
            <button type="submit">Create</button>
          </div>
        </div>
      </form>
    </div>

    {{#if posts.length}}
    <div>
      <h3>Current Posts:</h3>

      {{#each posts as |post|}}
      <div>
        <div>
          <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
        </div>
        <div>
          <button data-id="{{post.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>

<script src="./js/profile.js"></script>
